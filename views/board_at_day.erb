<h1>Board for <%= @view_data.board_name %> at <%= @view_data.date %></h1>

<em>Cards that moved stages on this day will appear under both stages</em>

<div>
  <% @view_data.stages.each do |stage| %>
  <h2><%= stage[:name]%></h2>

  <div class="cardCollection">

    <% stage[:cards].each do |card| %>
    <a href="<%= card[:url] %>">
      <div class="card high <%= "invert" if card[:invert]%>" style="background-color: <%= card[:color] %>"><%= h card[:name] %></div>
    </a>

    <% end %>

  </div>

  <% end %>

</div>
